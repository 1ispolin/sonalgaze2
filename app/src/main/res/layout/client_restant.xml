<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp"
    android:layout_marginVertical="10dp"
    app:cardBackgroundColor="@color/purple_700">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/clients"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"    >

            <TextView
                android:id="@+id/refres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:text="REF: 4086452"
                android:textColor="@color/purple_500"
                android:textSize="15dp"
                app:fontFamily="@font/hind_medium" />
            <TextView
                android:id="@+id/nomres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:text="Nom: SARL Rajem plastique"
                android:textColor="@color/purple_500"
                android:textSize="15dp"
                app:fontFamily="@font/hind_medium" />

            <TextView
                android:id="@+id/adresseres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:text="Adresse: Beni Mered BLIDA"
                android:textColor="@color/purple_500"
                android:textSize="15dp"
                app:fontFamily="@font/hind_medium"/>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>